{
    "name": "opmvpc/phpumlcd",
    "description": "Php class diagram generator",
    "keywords": [
        "opmvpc",
        "phpumlcd"
    ],
    "homepage": "https://github.com/opmvpc/phpumlcd",
    "license": "MIT",
    "authors": [
        {
            "name": "opmvpc",
            "email": "thibsix@outlook.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "nikic/php-parser": "^4.10"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Opmvpc\\ClassDiagram\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Opmvpc\\ClassDiagram\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "psalm",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "format": "php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
